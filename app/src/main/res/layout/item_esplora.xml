<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_esp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:elevation="@dimen/card_elevation"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="@dimen/rounded_corners">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/card_image_esp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_image_height"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/card_title_esp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_title_height"
                android:layout_alignBottom="@+id/card_image_esp"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:layout_marginLeft="@dimen/md_keylines"
                android:textColor="@color/white"/>

            <ImageButton
                android:id="@+id/expand"
                android:layout_width="@dimen/cards_button_width"
                android:layout_height="@dimen/cards_button_height"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:layout_alignBottom="@+id/card_image_esp"
                app:srcCompat="@drawable/ic_keyboard_arrow_down2"
                android:layout_marginRight="@dimen/md_keylines"
                android:layout_alignParentRight="true"
                style="?android:attr/borderlessButtonStyle"
                android:stateListAnimator="@null"/>

            <TextView
                android:id="@+id/card_text_esp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/expand"
                android:layout_marginLeft="@dimen/md_keylines"
                android:layout_marginBottom="@dimen/md_keylines"
                android:layout_marginRight="8dp"
                android:layout_marginTop="@dimen/md_keylines"
                android:text=""
                android:visibility="gone"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/article_subheading" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

